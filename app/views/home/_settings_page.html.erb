<div class="w-full mt-28 md:mt-16 md:mb-8 mb-6 relative">
  <div class="flex flex-col md:flex-row" style="height: 46.5rem"> <!-- style="height: calc(-3.5rem + 100vh);" -->
    <div class="flex-grow overflow-y-scroll relative px-6">
      <!-- Color Palettes -->
      <div class="flex justify-center mb-4 py-3 px-6 absolute right-0 top-0 w-full bg-white">
        <div class="py-1.5 px-3 hover:bg-gray-100 text-gray-500 rounded-lg flex items-center space-x-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>          <span>Settings Overview</span>
        </div>
      </div>
      <section class="mt-16" id="color-palette">
        <div class="flex items-center mb-2 mt-8">
          <div class="text-lg flex-grow px-3">Slate Gray</div>
          <button class="text-gray-500 px-3 py-1.5 text bg-white hover:bg-gray-100 rounded-md">Export Code</button>
        </div>
        <div class="container rounded-xl bg-gray-50 border mx-auto flex flex-wrap justify-center text-gray-600 border-b overflow-hidden">
          <% palette.each do |palet| %>
            <div class="flex flex-col items-center justify-center text-center my-4 p-1">
              <div class="w-24 h-24 flex cursor-pointer flex-col justify-center rounded shadow-inner p-2 md:p-4" style="background-color: #<%= palet.hex %>">
                <div class="font-medium" style="color: #<%= palet.invert.hex %>">100</div>
                <div class="text-xs uppercase opacity-90"><%= "##{palet.hex}" %></div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
      <!-- Components Overview -->
      <div class="flex justify-between items-center mb-2 mt-8">
        <div class="text-gray-500 px-3 py-1.5 text bg-white rounded-md cursor-pointer">Overview</div>
        <div class="relative" data-controller="dropdown">
          <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
            <span class="appearance-none flex items-center text-gray-700">
              <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown" class="text-center inline-flex items-center text-gray-500 px-3 py-1.5 text bg-white hover:bg-gray-100 rounded-md" type="button">Font Family<svg class="w-4 h-4 ml-2" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg></button>
            </span>
          </div>
          <div data-dropdown-target="menu" class="absolute right-0 mt-2 hidden" style="width: 8.5rem;">
            <div class="bg-white shadow rounded border overflow-hidden">
              <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-gray-600 dark:hover:bg-gray-600 dark:hover:text-white" data-action="click->dropdown#toggle">Inter</a>
                </li>
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-gray-600 dark:hover:bg-gray-600 dark:hover:text-white" data-action="click->dropdown#toggle">Helvetica</a>
                </li>
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-gray-600 dark:hover:bg-gray-600 dark:hover:text-white" data-action="click->dropdown#toggle">Monospace</a>
                </li>
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-gray-600 dark:hover:bg-gray-600 dark:hover:text-white" data-action="click->dropdown#toggle">Cursive</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="container rounded-xl bg-gray-50 border mx-auto flex justify-between text-gray-600 border-b overflow-hidden p-4">
        <%= render "home/dashboard_component" %>
      </div>
    </div>
    <!-- Color Settings -->
    <%= render "home/color_settings" %>
  </div>
</div>

<style>
  [type="number"] {
    padding: .5rem .2rem;
    border: none;
  }
  .md\:mt-16 {
    margin-top: 4.5rem;
  }
</style>